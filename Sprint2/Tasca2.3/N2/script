
db.createCollection( 'user', {validator: {$jsonSchema: {bsonType: 'object',title:'user',required: [         'email',          'password',          'name_user'],properties: {email: {bsonType: 'string'},password: {bsonType: 'string'},name_user: {bsonType: 'string'},date_of_birth: {bsonType: 'date'},gender: {enum: 'MALE','FEMALE'},country: {bsonType: 'string'},zip: {bsonType: 'int'},own_channel: {bsonType: 'object',
title:'object',required: [         'name',          'description',          'date_creation'],properties: {name: {bsonType: 'string'},description: {bsonType: 'string'},date_creation: {bsonType: 'date'}}},subscription_chanels: {bsonType: 'objectId'},playlist: {bsonType: 'object',
title:'object',required: [         'name',          'date',          'state'],properties: {name: {bsonType: 'string'},date: {bsonType: 'timestamp'},state: {enum: 'PUBLIC','PRIVATE'}}}}         }      }});  
db.createCollection( 'video', {validator: {$jsonSchema: {bsonType: 'object',title:'video',required: [         'title',          'description',          'size',          'name_file',          'length',          'num_reproductions',          'num_likes',          'num_dislikes',          'state',          'publication_date',          'user'],properties: {title: {bsonType: 'string'},description: {bsonType: 'string'},size: {bsonType: 'double'},name_file: {bsonType: 'string'},length: {bsonType: 'decimal'},thumbnail: {bsonType: 'binData'},num_reproductions: {bsonType: 'int'},num_likes: {bsonType: 'int'},num_dislikes: {bsonType: 'int'},state: {enum: 'PUBLIC','PRIVATE','HIDDEN'},tags: {bsonType: 'object',
title:'object',required: [         'name_tag'],properties: {name_tag: {bsonType: 'string'}}},publication_date: {bsonType: 'date'},user: {bsonType: 'objectId'},likes_users: {bsonType: 'object',
title:'object',required: [         'user_id',          'date'],properties: {user_id: {bsonType: 'objectId'},date: {bsonType: 'timestamp'}}},dislike_users: {bsonType: 'object',
title:'object',required: [         'user_id',          'date'],properties: {user_id: {bsonType: 'objectId'},date: {bsonType: 'timestamp'}}},comments: {bsonType: 'object',
title:'object',required: [         'text',          'date'],properties: {text: {bsonType: 'string'},date: {bsonType: 'timestamp'},dislike: {bsonType: 'bool'},like: {bsonType: 'bool'},user_id: {bsonType: 'objectId'}}}}         }      }});  